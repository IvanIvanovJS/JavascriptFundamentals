{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Start Debugging",
        "program": "${file}",
        "console": "internalConsole",
        "internalConsoleOptions": "openOnSessionStart",
        "runtimeArgs": ["--inspect"],
        "outputCapture": "std",
        "env": {
          "NODE_OPTIONS": "--inspect --experimental-repl-await"
        }
      }
    ]
  }
  